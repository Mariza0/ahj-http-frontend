{
  "plugins": ["prettier", "promise"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
    
  },
  "rules": {
    
    "no-unused-vars": "off",
    "no-inner-declarations": "off"
  
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "jest/prefer-expect-assertions": "off" }
    }
  ]
}
